}
void instructions() {
    clear();
    mvprintw(1, 8, "\t\t Instructions ");
    mvprintw(2, 8, "\n\t ------------------------------------");
    mvprintw(4, 9, "\n\t Catch a rabbit that glides quickly ");
    mvprintw(6, 8, "\n\t ------------------------------------");
    mvprintw(8, 8, "\n\t Press 'n' to move left");
    mvprintw(10, 8, "\n\t Press 'x' to move right");
    mvprintw(12, 8, "\n\t Press 'escape' to exit");
    mvprintw(14, 8, "\n\t ------------------------------------");
    mvprintw(18, 8, "\n\n Press any key to go back to menu");
    refresh();
    nodelay(stdscr, FALSE);
    getch();
    clear();
    refresh();
}
