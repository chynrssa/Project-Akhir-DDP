void YouWin(){
    int posY = 0;
    int screenWidth = 80; 

    while (posY < 10)
    {
        clear();
        mvprintw(posY, (screenWidth - 65) / 2,     "  yyy     yyy   oooooooooo   uuuu        uuuu      wwww                   wwww  iiiiii   nnnnn      nnnnn");
        mvprintw(posY + 1, (screenWidth - 65) / 2, "  yyy     yyy  oooo    oooo  u  u        u  u      w  w                   w  w  ii  ii   n   n      n   n");
        mvprintw(posY + 2, (screenWidth - 65) / 2, "  yyyy   yyyy  ooo      ooo  u  u        u  u      w  w                   w  w  ii  ii   n    n     n   n");
        mvprintw(posY + 3, (screenWidth - 65) / 2, "   yyyyyyyy    ooo      ooo  u  u        u  u      w  w                   w  w  ii  ii   n     n    n   n");
        mvprintw(posY + 4, (screenWidth - 65) / 2, "    yyyyyy     ooo      ooo  u  u        u  u      w  w      wwwwwww      w  w  ii  ii   n   n   n  n   n");
        mvprintw(posY + 5, (screenWidth - 65) / 2, "     yyyyy     ooo      ooo  u  u        u  u      w  w     w  ww  w      w  w  ii  ii   n   n    nnn   n");
        mvprintw(posY + 6, (screenWidth - 65) / 2, "     yyyy      ooo      ooo  u  u        u  u      w  w    w  w  w  w     w  w  ii  ii   n   n n  nn    n");
        mvprintw(posY + 7, (screenWidth - 65) / 2, "     yyyy      ooo      ooo  u  u        u  u      w  w   w  w    w  w    w  w  ii  ii   n   n  n       n");
        mvprintw(posY + 8, (screenWidth - 65) / 2, "     yyyy      oooo    oooo  u   uuuuuuuuu  u      w  w  w  w      w   w  w  w  ii  ii   n   n    nnn   n");
        mvprintw(posY + 9, (screenWidth - 65) / 2, "     yyyy       oooooooooo   uuuuuuuuuuuuuuuu      wwwwwwwwww       wwwwwwwwww  iiiiii   nnnnn      nnnnn");
        refresh();
        Sleep(200);
        posY++;
    }
}
void loading(){
    clear();
    for (int i = 1; i <= 3; i++){
        mvprintw(10, 35, "LOADING [>        ]");
        refresh();
        Sleep(100);
        clear();
