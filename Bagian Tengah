int menangkap(){
    for (int ind = 0; ind < 2; ind++){
        if (kelinciY[ind] + 4 >= 23 && kelinciY[ind] <= 27){
            if (kelinciX[ind] >= keranjangPos && kelinciX[ind] <= keranjangPos + 9){
                resetKelinci(ind);
                return 1;
            }else{
                return 2;
            }
        }
    }
    return 0;
}
void gameover(){
    int posY = 10;
    for (int posX = 0; posX < 50; ++posX){
        clear();
        mvprintw(posY, posX,     "  GGG      A     M       M   EEEEE      OOO  V   V EEEEE RRRR \n ");
        mvprintw(posY + 1, posX, " G        A A   MMM     MMM  E         O   O V   V E     R   R\n");
        mvprintw(posY + 2, posX, " G  GGG  AAAAA  M   M  M  M  EEEEE     O   O V   V EEEEE RRRR\n");
        mvprintw(posY + 3, posX, " G   GG  A   A  M    M    M  E         O   O V   V E     R  RR \n");
        mvprintw(posY + 4, posX, "  GGG    A   A  M         M  EEEEE      OOO    V   EEEEE R   RR\n");
        mvprintw(18, 30, "\t\t Score Anda Adalah\t: %d", score);
        mvprintw(5, 15, "\t\t\t\t Press any key to go back to menu.");
        refresh();
        Sleep(100);
        clear();
    }
    getch();
    clear();
}
